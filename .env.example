# DIABOT V4 - Environment Variables Template
# Copy to .env.local and fill in your values

# === SUPABASE CONFIGURATION ===
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# === AUTHENTICATION ===
# Set to true for development testing with x-debug-user-id header
AUTH_DEV_MODE=false

# === FEATURE FLAGS ===
# AI Agent: demo | openai | off
NEXT_PUBLIC_AI_AGENT=demo

# Rewards system
NEXT_PUBLIC_REWARDS=false

# Background sync
NEXT_PUBLIC_BG_SYNC=false

# Real-time features
NEXT_PUBLIC_REALTIME=false

# === EMERGENCY CONTROLS ===
# Kill switch - disables all non-essential features
NEXT_PUBLIC_KILL_SWITCH=false

# === DEVELOPMENT ===
# Demo user ID for testing
NEXT_PUBLIC_DEMO_USER_ID=a9d5518d-ee4c-49ca-8b20-5a2d4aaa16a2

# === EXTERNAL SERVICES (Optional) ===
# OpenAI API Key (only if AI_AGENT=openai)
# OPENAI_API_KEY=your-openai-key-here

# Analytics (optional)
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id